<!DOCTYPE html>
<html ng-app = "WikiHow">
<head>
  <title ng-bind="title"></title>
  <meta charset = "UTF-8">
  <base href="/"></base>
  <link rel="stylesheet" type="text/css" href="stylesheets/bootstrap.min.css" />
<link rel="stylesheet" type="text/css" href="/stylesheets/main.css" />

<script type="text/javascript" src="scripts/jquery.min.js"></script>
<script type="text/javascript" src="scripts/bootstrap.min.js"></script>

<script type="text/javascript" src="scripts/angular.min.js"></script>
<script type="text/javascript" src="scripts/angular-ui-router.min.js"></script>
<script type="text/javascript" src="scripts/angular-cookies.min.js"></script>
<script type="text/javascript" src="scripts/ng-file-upload.min.js"></script>
<script type="text/javascript" src="scripts/ng-file-upload-shim.min.js"></script>
<script type="text/javascript" src="scripts/controllers.js"></script>
<script type="text/javascript" src="scripts/controllers2.js"></script>
<script type="text/javascript" src="scripts/app.js"></script>
</head>

<body>

  <nav class="navbar navbar-static-top navbar-inverse" ng-controller = 'navbarCtrl'>
  <div class="container">
    <div class="navbar-header">
      <a class="navbar-brand" href="/home">
        <img alt="Brand" src="images/brand.png" height = "100%">
      </a>
    </div>
    <form class="navbar-form navbar-left" role="search" ng-submit = "search(key)">
        <div class="form-group">
          <input type="text" class="form-control" ng-model = "key" placeholder="to do anything" >
        </div>
        <a type="submit" ng-href = "/search?key={{key}}" class="btn btn-default"><span class="glyphicon glyphicon-search" aria-hidden="true"></span></a>
    </form>
    <ul class="nav navbar-nav navbar-right">
      <li class="navbar-right " ng-hide = "!user">
        <a href="/profile"><span class="glyphicon glyphicon-user"></span> {{user.username}}</a>
      </li>   
      <li class="navbar-right dropdown" ng-hide = "user">
        <a href="#" data-toggle="dropdown" class="dropdown-toggle">Login <b class="caret"></b></a>
		    <div class="dropdown-menu" id="menu1">
		    <div class="col-md-12"><h4>Login</h4></div>
			 <form class = "col-md-12" ng-submit = "login()">
        <h6>{{error}}</h6>
		    <div class="form-group">
        <label for="username">Username:</label>
        <input type="text" class="form-control" id="username" ng-model = "username" placeholder="Username">
        </div>
        <div class="form-group">
        <label for="password">Password:</label>
        <input type="password" class="form-control" id="password" ng-model = "password" placeholder="Password">
        </div>
        <div class="checkbox">
          <label class = "col-md-9">
            <input type="checkbox"> Remember me
           </label>
           <button type="submit" class="btn btn-success">Log in</button>
        </div>
        
		    </form>

		    <div class="col-md-12"><a href="/signup"><h4>Create new account</h4></a></div>
		  </div>

      </li>
      <li class="navbar-right">
        <a href="/new-article"><span class="glyphicon glyphicon-pencil"></span> Write an article</a>
      </li>
    </ul>
  </div>
  </nav>

  <div ui-view></div>

</body>
</html>
